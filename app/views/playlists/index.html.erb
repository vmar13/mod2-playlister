<h1 class="add-songs-header">My Playlists</h1>
<br>

<%= button_to "Create a New Playlist", new_playlist_path, method: :get, class:"btn btn-outline-light create-new-playlist-btn", type:"button" %>
<br>
<br>

<div class="playlists-index-container">
    <ul class="list-group">
        <% @playlists.each do |playlist| %>
            <%= link_to playlist.title, playlist_path(playlist), class:"list-group-item list-group-item-action"%>
        <% end %>
    </ul>
</div>





