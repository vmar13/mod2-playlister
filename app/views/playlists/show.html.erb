<div class="playlist-show"> 
    <h1 ><%= @playlist.title %></h1>
    <br/>
    <ul>
        <% @playlist.tracks.each do |track| %>
            <li><%= track.name %></li> 
        <% end %>
    </ul>
</div>

<div class="playlist-show-btn-group">
    <%= button_to "Delete This Playlist", {:controller => :playlists,
        :action => 'destroy', :id => @playlist.id },  :method => :delete, class:"btn btn-outline-light playlist-show-side-btns" %>

    <%= button_to "Edit This Playlist", {:controller => :playlists,
        :action => 'edit', :id => @playlist.id }, :method => :get, class:"btn btn-outline-light playlist-show-side-btns" %>

    <%= button_to "Add Songs",{:controller => :add_songs, :action => 'new', :playlist_id => @playlist.id},  :method => :get, class:"btn btn-outline-light playlist-show-side-btns" %>

    <%= button_to "My Playlists", {:controller => :playlists, :action => 'index'}, method: :get, class:"btn btn-outline-light playlist-show-side-btns" %>
</div>