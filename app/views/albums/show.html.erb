<%= button_to "Back to Playlists", {:controller => :playlists, :action => 'index'}, method: :get, class:"btn btn-outline-light playlist-show-side-btns" %>
<%= button_to "Back to Homepage", {:controller => :playlists, :action => 'home'}, method: :get, class:"btn btn-outline-light playlist-show-side-btns" %>

<div class="album-show-container">
<h1><%= @album.name %></h1>

<img src="<%= @album.images[0]["url"] %>" alt="Album Cover", style="width:200px; height:200px;">
    <ol>
        <% @album.tracks.each do |track| %>
            <li class="track-name"><%= track.name %> | <%=Time.at(track.duration_ms/1000).utc.strftime("%M:%S")%></li>
        <% end %>
    </ol>
</div>

